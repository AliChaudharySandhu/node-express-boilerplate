{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"prettier"
	],
	"overrides": [],
	"ignorePatterns": ["node_modules/", "dist/"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-mixed-spaces-and-tabs": 0,
		"no-useless-catch": 0,
		"no-unused-vars": 1,
		"func-name-matching": 2,
		"object-curly-spacing": [
			2,
			"always",
			{
				"arraysInObjects": false,
				"objectsInObjects": false
			}
		]
	}
}
